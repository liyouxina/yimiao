.container {
    height: 100vh;
}

.scrolltop {
    position: fixed;
    bottom: 200rpx;
    right: 32rpx;
    width: 100rpx;
    height: 100rpx;
    z-index: 100;
    opacity: 0;
    visibility: hidden;
    transition: all .3s ease;
}

.scrolltop.show {
    visibility: visible;
    opacity: 1;
}

.searchbar {
    width: 100%;
}

.home-swiper {
    width: 100%;
    height: 382rpx;
    overflow: hidden;
    background-color: #fff;
}

.home-swiper-item {
    width: calc(100% - 64rpx);
    margin-top: 32rpx;
    margin-left: 32rpx;
    border-radius: 20rpx;
    overflow: hidden;
    background-color: #f5f9fc;
    box-shadow: 0rpx 11rpx 32rpx 0rpx rgba(81,146,255,.17);
}

.ad-deadline {
    width: 100%;
    box-sizing: border-box;
    background-color: #fff;
}

.ad-deadline-pic {
    width: 100%;
}

.card-list {
    width: 100%;
    margin-top: 20rpx;
}

.scroll-scell {
    width: 100%;
    background-color: none;
}

.split-title {
    width: 100%;
    margin-top: 12rpx;
    padding: 32rpx 32rpx 10rpx;
    line-height: 32rpx;
    font-size: 36rpx;
    font-weight: 700;
    box-sizing: border-box;
    color: #283036;
    background-color: #fff;
}

.product-swiper {
    position: relative;
    width: 100%;
}

.product-swiper.sticky {
    visibility: hidden;
}

.product-swiper.show {
    margin-top: 0;
    visibility: visible;
}

.zf-header-h5 {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 22rpx;
    color: #393a50;
    padding-left: 30rpx;
    box-sizing: border-box;
    min-width: 0;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.gesture-handle {
    position: absolute;
    top: 200rpx;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: calc(100vh - 200rpx);
}

.empty {
    margin-top: 15vh;
}

.head-tip {
    margin-top: 16rpx;
    display: flex;
    justify-content: space-between;
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 32rpx;
    overflow: hidden;
    background-color: #fff8f4;
}

.head-top-icon,.head-top-text {
    display: block;
    text-align: left;
    font-size: 28rpx;
    color: #fc6d1f;
}